modules-left = i3 mpd
; modules-center = mpd
modules-right = updates weather wifi wired volume backlight keyboard battery date cpu memory filesystem powermenu

tray-transparent = true
tray-position = right
tray-detached = false
tray-maxsize = 16

wm-restack = i3

