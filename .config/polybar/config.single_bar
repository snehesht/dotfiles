[bar/top]
;monitor = HDMI-1
dock = false
width = 100%
height = 20
offset-x = 0
offset-y = 0

bottom = false

background = #00000000
foreground = #FFFFFF
;linecolor = #666

;border-bottom = 1
;border-bottom-color = #333

