lineheight = 2
padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 2

font-0 = Hack:size=9;1
font-1 = Unifont:size=12;0
font-2 = FontAwesome:size=10;0
font-3 = NotoSans-Regular:size=8;-1
